{
  "name": "socket",
  "version": "0.0.1",
  "description": "Handle Socket",
  "author": "Tien ",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "cross-env NODE_ENV=local nest start --watch",
    "start:dev": "cross-env NODE_ENV=development node dist/main",
    "start:staging": "cross-env NODE_ENV=staging node dist/main",
    "start:pilot": "cross-env NODE_ENV=pilot node dist/main",
    "start:debug": "cross-env NODE_ENV=local nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "deploy:stag": "cross-env NODE_ENV=staging pm2 start dist/main.js --time -o logs/log.log -e errors/error.log --name socket",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration": "nest start --watch && ts-node ./node_modules/typeorm/cli.js migration:run",
    "build:dev": "nest build && pm2 start pm2.yaml",
    "build:stag": "nest build && NODE_PORT=5077 pm2 start pm2.json -n socket-hnth --env staging",
    "build:prod": "nest build && NODE_PORT=5077 pm2 start pm2.prod.json -n socket-hnth --env production",
    "pm2:delete": "pm2 delete log-realtime",
    "build-docker:prod": "cross-env NODE_ENV=production pm2 start dist/main.js --time -o logs/log.log -e errors/error.log --name socket"
  },
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@nestjs/common": "^10.2.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/platform-express": "^10.2.8",
    "@nestjs/platform-fastify": "^10.2.8",
    "@nestjs/platform-socket.io": "^10.2.8",
    "@nestjs/swagger": "^7.1.15",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.3",
    "@types/dotenv": "^8.2.0",
    "axios": "^1.6.1",
    "builder-pattern": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "https": "^1.0.0",
    "joi": "^17.11.0",
    "js-base64": "^3.7.5",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mysql2": "^3.11.4",
    "path": "^0.12.7",
    "qs": "^6.11.1",
    "redis": "^4.6.7",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "^4.5.3",
    "exceljs": "^4.4.0",
    "typeorm": "^0.3.20",
    "undici": "^6.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
